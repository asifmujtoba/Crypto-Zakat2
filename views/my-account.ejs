<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
      <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Account - Dashboard</title>
	<!-- BOOTSTRAP STYLES-->
    <link href="/public/css/bootstrap.css" rel="stylesheet" />
     <!-- FONTAWESOME STYLES-->
    <link href="/public/css/all.css" rel="stylesheet" />
     <!-- MORRIS CHART STYLES-->
    <link href="/public/js/morris/morris-0.4.3.min.css" rel="stylesheet" />
        <!-- CUSTOM STYLES-->
    <link href="/public/css/custom.css" rel="stylesheet" />
     <!-- GOOGLE FONTS-->
   <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <%- include('part/dash-header.ejs'); %>
      
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper" >
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">  
                        <h2>My Account</h2>
                    </div>
                </div>              
                 <!-- /. ROW  -->
                 
                <div class="row">
                    <div class="col-md-6">
                        <form method="post" action="/dashboard/update">
                            <fieldset>
                                <div class="form-group col-md-12">
                                    <label for="username">Username</label>
                                    <input class="form-control" id="username" name="username" type="text" value="<%=session.name%>" disabled/>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="firstname">First Name</label>
                                    <input class="form-control" id="firstname" name="firstname" type="text" value="<%if(user[0]){%> <%=user[0].firstname%> <%}%>" disabled>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="lastname">Last Name</label>
                                    <input class="form-control" id="lastname" name="lastname" type="text" value="<%if(user[0]){%> <%=user[0].lastname%><%}%>" disabled>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="email">Email</label>
                                    <input class="form-control" id="email" name="email" type="text" value="<%=session.user_email%>" disabled>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="street">Street</label>
                                    <input class="form-control" id="street" name="street" type="text" value="<%if(user[0]){%> <%=user[0].street%><%}%>" disabled>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="address">Address</label>
                                    <input class="form-control" id="address" name="address" type="text" value="<%if(user[0]){%> <%=user[0].address%><%}%>" disabled>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="country">Country</label>
                                    <input class="form-control" id="country" name="country" type="text" value="<%if(user[0]){%> <%=user[0].country%><%}%>" disabled>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="phone">Phone</label>
                                    <input class="form-control" id="phone" name="phone" type="text" value="<%if(user[0]){%> <%=user[0].phone%><%}%>" disabled >
                                </div>
                                <div class="col-md-12">
                                        <button type="button" id="edit" onclick="removeDisabled()" class="btn btn-primary">Edit</button>
                                        <button type="submit" style="display: none;" id="done" onclick="done()" class="btn btn-success">Done</button>
                                        <div class="inline-block">
                                           <a onclick="closeEdit()"> <i style="color:crimson; display: none;" id="cancel"  class="far fa-window-close fa-2x"></i> </a>
                                        </div>
                                </div>
                            </fieldset>
                            
                        </form>
                    </div>
                </div>

             <!-- /. PAGE INNER  -->
            </div>
         <!-- /. PAGE WRAPPER  -->
        </div>
     <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="/public/js/jquery-1.10.2.js"></script>
      <!-- BOOTSTRAP SCRIPTS -->
    <script src="/public/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="/public/js/jquery.metisMenu.js"></script>
     <!-- MORRIS CHART SCRIPTS -->
     <script src="/public/js/morris/raphael-2.1.0.min.js"></script>
    <script src="/public/js/morris/morris.js"></script>
      <!-- CUSTOM SCRIPTS -->
    <script src="/public/js/custom.js"></script>
    <script>
       document.getElementById("my-account").className = "active-menu";
        
    </script>
    <script>
        function removeDisabled(){
            console.log('editing');
            document.getElementById('firstname').removeAttribute('disabled');
            document.getElementById('lastname').removeAttribute('disabled');
            document.getElementById('street').removeAttribute('disabled');
            document.getElementById('address').removeAttribute('disabled');
            document.getElementById('country').removeAttribute('disabled');
            document.getElementById('phone').removeAttribute('disabled');
            document.getElementById('done').style.display = 'inline';
            document.getElementById('cancel').style.display = 'inline-block';
        };
        function closeEdit(){
            document.getElementById('done').style.display = 'none';
            document.getElementById('cancel').style.display = 'none';
            document.getElementById('firstname').setAttribute('disabled', 'disabled');
            document.getElementById('lastname').setAttribute('disabled', 'disabled');
            document.getElementById('street').setAttribute('disabled', 'disabled');
            document.getElementById('address').setAttribute('disabled', 'disabled');
            document.getElementById('country').setAttribute('disabled', 'disabled');
            document.getElementById('phone').setAttribute('disabled', 'disabled');
        }
       
    </script>
    
   
</body>
</html>
