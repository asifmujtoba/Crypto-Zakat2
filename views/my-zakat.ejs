<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
      <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Zakat - Dashboard</title>
	<!-- BOOTSTRAP STYLES-->
    <link href="/public/css/bootstrap.css" rel="stylesheet" />
     <!-- FONTAWESOME STYLES-->
    <link href="/public/css/all.css" rel="stylesheet" />
     <!-- MORRIS CHART STYLES-->
    <link href="/public/js/morris/morris-0.4.3.min.css" rel="stylesheet" />
        <!-- CUSTOM STYLES-->
    <link href="/public/css/custom.css" rel="stylesheet" />
     <!-- GOOGLE FONTS-->
   <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <%- include('part/dash-header.ejs'); %>
      
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper" >
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">  
                        <h2>My Zakat Transactions</h2>
                    </div>
                </div>              
                 <!-- /. ROW  -->
                  <hr />
                  <%if(newInv[0]){%>
                    <div class="col-md-12">
                        <!--   New Zakat Transactions  -->
                       <div class="panel panel-default">
                           <div class="panel-heading">
                               New Zakat Transactions
                           </div>
                           <div class="panel-body">
                               <div class="table-responsive">
                                   <table class="table">
                                       <thead>
                                           <tr>
                                               <th>No.</th>
                                               <th>Date</th>
                                               <th>USD</th>
                                               <th>BTC</th>
                                               <th>Ex. Rate</th>
                                               <th>Status</th>
                                               <th>Invoice URL</th>
                                           </tr>
                                       </thead>
                                       <tbody>
                                       <% for(var i = 0; i<newInv.length; i++){ %>    
                                           <tr>
                                               <td><%=i+1%></td>
                                               <td><%=newInv[i].time%></td>
                                               <td><%=newInv[i].price%></td>
                                               <td><%=newInv[i].btcPrice%></td>
                                               <td><%=newInv[i].rate%></td>
                                               <td><%=newInv[i].status%></td>
                                               <td><center><a href='<%=newInv[i].url%>'><i class="fas fa-external-link-alt"></i></a></center></td>
                                           </tr>
                                        <% } %>
                                       </tbody>
                                   </table>
                               </div>
                           </div>
                       </div>
                         <!-- End  Basic Table  -->
                   </div>
               <% } 
                 %>  
                  
               
                    <div class="col-md-12">
                         <!--   Successful Zakat Transactions  -->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Successful Zakat Transactions
                            </div>
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>No.</th>
                                                <th>Date</th>
                                                <th>USD</th>
                                                <th>BTC</th>
                                                <th>Ex. Rate</th>
                                                <th>Status</th>
                                                <th>Invoice URL</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        <% for(var i = 0; i<success.length; i++){ %>    
                                            <tr>
                                                <td><%=i+1%></td>
                                                <td><%=success[i].time%></td>
                                                <td><%=success[i].price%></td>
                                                <td><%=success[i].btcPrice%></td>
                                                <td><%=success[i].rate%></td>
                                                <td><%=success[i].status%></td>
                                                <td><center><a href='<%=success[i].url%>'><i class="fas fa-external-link-alt"></i></a></center></td>
                                            </tr>
                                         <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                          <!-- End  Basic Table  -->
                    </div>

                    <div class="col-md-12">
                        <!--   Successful Zakat Transactions  -->
                       <div class="panel panel-default">
                           <div class="panel-heading">
                               Unsuccessful Zakat Transactions
                           </div>
                           <div class="panel-body">
                               <div class="table-responsive">
                                   <table class="table">
                                       <thead>
                                           <tr>
                                               <th>No.</th>
                                               <th>Time</th>
                                               <th>USD</th>
                                               <th>BTC</th>
                                               <th>Ex. Rate</th>
                                               <th>Status</th>
                                               <th>Invoice URL</th>
                                           </tr>
                                       </thead>
                                       <tbody>
                                       <% for(var i = 0; i<unsuccess.length; i++){ %>    
                                           <tr>
                                               <td><%=i+1%></td>
                                               <td><%=unsuccess[i].time%></td>
                                               <td><%=unsuccess[i].price%></td>
                                               <td><%=unsuccess[i].btcPrice%></td>
                                               <td><%=unsuccess[i].rate%></td>
                                               <td><%=unsuccess[i].status%></td>
                                               <td><center><a href='<%=unsuccess[i].url%>'><i class="fas fa-external-link-alt"></i></a></center></td>
                                           </tr>
                                        <% } %>
                                       </tbody>
                                   </table>
                               </div>
                           </div>
                       </div>
                         <!-- End  Basic Table  -->
                   </div>

                </div>

             <!-- /. PAGE INNER  -->
            </div>
         <!-- /. PAGE WRAPPER  -->
        </div>
     <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="/public/js/jquery-1.10.2.js"></script>
      <!-- BOOTSTRAP SCRIPTS -->
    <script src="/public/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="/public/js/jquery.metisMenu.js"></script>
     <!-- MORRIS CHART SCRIPTS -->
     <script src="/public/js/morris/raphael-2.1.0.min.js"></script>
    <script src="/public/js/morris/morris.js"></script>
      <!-- CUSTOM SCRIPTS -->
    <script src="/public/js/custom.js"></script>
    <script>
       document.getElementById("my-zakat").className = "active-menu";
    </script>
    
   
</body>
</html>
